pipeline {
  agent any

  environment {
    ARM_TENANT_ID = credentials('arm-tenant-id')
    ARM_SUBSCRIPTION_ID = credentials('arm-subscription-id')
    ARM_CLIENT_ID = credentials('arm-client-id')
    ARM_CLIENT_SECRET = credentials('arm-client-secret')
  }

  stages {
    stage('Checkout SCM') {
      steps {
        checkout scm
      }
    }

    stage('Terraform Init') {
      steps {
        dir('budget_alert') {
          sh 'terraform init'
        }
      }
    }

    stage('Remove Budget Resource From State (if not present)') {
      steps {
        dir('budget_alert') {
          sh '''
            echo "Checking if budget resource exists in Terraform state..."
            terraform state list | grep azurerm_consumption_budget_resource_group.budget && terraform state rm azurerm_consumption_budget_resource_group.budget || echo "Budget not in state or already removed"
          '''
        }
      }
    }

    stage('Terraform Destroy Budget Only') {
      steps {
        dir('budget_alert') {
          sh 'terraform destroy -target=azurerm_consumption_budget_resource_group.budget -auto-approve'
        }
      }
    }
  }
}
